<style>
    .maincontainer{
        background: #bdc3c7;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content:center;
        align-items: center;
    }
    .box{
        background: #fff;
        width: 50%;
        height: auto;
        border-radius: 10px;
        padding-left: 20px;
        padding-right: 20px;
    }
    .heading{
        font-size: 24px;
        font-weight: bold;
        font-family: Oswald;
        padding: 5px;
        letter-spacing: 1px;
    }
    .image{
        width: 50px;
        height: 50px;
        padding: 5px;
    }
    .headingdiv{
        display: flex;
        align-items: center;
        flex-direction: row;
        justify-content: space-between;
    }
    .formDiv{
        margin: 10px;

    }
    .gap{
        margin-bottom: 10px;
    }
    .btnstyle{
        display: flex;
        justify-content: center;
        align-items: center;
        
    }
</style>
<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script> 
<script src="/javascripts/project.js"></script>
    </head>
    <body>
        <form action="/product/edit_product"  method="post">
            <input type="hidden" name="productid" value="<%=data._id%>">
            <div class="maincontainer">
                <div class="box">
                    <div class="headingdiv">
                        <div style="display: flex;">
                        <div><img src="/images/logo.jpg" class="image" ></div>
                        <div class="heading">Product Register</div>
                        </div>

                        <div><a href="/product/fetch_all_products" style="text-decoration: none;"><img src="/images/display.png" style="width: 40px;"></a></div>
                    </div>
                    <div class="formDiv">
                        <div class="row gap">
                            <div class="col-md-12">
                                <input required type="text" class="form-control" name="productname" value="<%=data.productname%>" placeholder="Product Name">
                            </div>
                        </div>
                        
                        <div class="row gap">
                            <div class="col-md-6">
                                <select required class="form-select" id="producttypeid" name="producttypeid" aria-label="Default select example">
                                    <option value="<%=data.producttypeid%>" selected><%=data.productTypeData[0].producttypename%></option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <select required class="form-select" id="productcategoryid" name="productcategoryid" aria-label="Default select example">
                                    <option value="<%=data.productcategoryid%>" selected><%=data.categoryData[0].productcategoryname%></option>
                                </select>
                            </div>
                        </div>

                        <div class="row gap">
                            <div class="col-md-12">
                                <input required type="text" class="form-control" name="description" value="<%=data.description%>" placeholder="Description">
                            </div>
                        </div>
                        
                        <div class="row gap">
                            <div class="col-md-6">
                                <input required type="text" class="form-control" name="price" value="<%=data.price%>" placeholder="Product Price">
                            </div>
                            <div class="col-md-6">
                                <input required type="text" class="form-control" name="offer" value="<%=data.offer%>" placeholder="Product Offer">
                            </div>
                        </div>
                        
                        <div class="row gap">
                            <div class="col-md-6">
                                <input required type="text" class="form-control" name="quantity" value="<%=data.quantity%>" placeholder="Quantity">
                            </div>
                            <div class="col-md-6">
                                <select required class="form-select" name="quantitytype" aria-label="Default select example">
                                    <option selected><%=data.quantitytype%></option>
                                    <option>kg</option>
                                    <option>g</option>
                                    <option>ml</option>
                                    <option>ltr</option>
                                    <option>unit</option>
                                  </select>
                            </div>
                        </div>

                        

                        <div class="row gap">
                            <div class="col-md-6 btnstyle">
                                <button style="width:300px" type="submit" name="btn" value="Edit" class="btn btn-primary">Edit</button>
                            </div>
                            <div class="col-md-6 btnstyle">
                                <button style="width:300px" type="submit" name="btn" value="Delete" class="btn btn-primary">Delete</button>
                            </div>
                        </div>
                       
                        <!-- <div class="row gap">
                            <div class="col-md-12 btnstyle">
                               <h4><%=message %></h4>
                            </div>
                        </div> -->
                        
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>